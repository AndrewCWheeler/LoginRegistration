@{
    ViewData["Title"] = "Login";
}
@model LogUser

<div class="row">
    <div class="mt-2 mb-4 col text-center">
        <h1>Login</h1>
    </div>
</div>
<div class="row my-3 justify-content-center">
    <div class="col col-sm-6">

        <form class="form" asp-action="Logging" asp-controller="Home" method="POST">
            
            <div class="form-group">
                <label for="Email" class="col-form-label d-none d-sm-block">Email</label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label for="Password" class="col-form-label d-none d-sm-block">Password</label>
                <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="mt-5 form-group">
                <button class="btn btn-outline-primary btn-lg btn-block">Login</button>
            </div>
        </form>
        <div class="text-center">
            <p class="mt-5 mb-1">Don't have an account?</p>
            <a href="/">Register</a>
        </div>
    </div>
</div>
